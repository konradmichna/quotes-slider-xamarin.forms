<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cytaty.QuotesPage">
    <ContentPage.Content Padding="20">
        <StackLayout Padding="20">
            <Label Text="{Binding Source={x:Reference FontSlider}, Path=Value, StringFormat='Font Size: {0:F2}'}" />

            <Slider x:Name="FontSlider" Maximum="50" Minimum="16" Value="16" />

            <Label Text="{Binding Cytaty[0]}" FontSize="{Binding Source={x:Reference FontSlider}, Path=Value}" />
            <Label Text="{Binding Cytaty[1]}" FontSize="{Binding Source={x:Reference FontSlider}, Path=Value}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>